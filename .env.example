# AI Recommendation Service - Environment Configuration Template
# Copy this file to .env and customize for your environment

# ===================================
# APPLICATION CONFIGURATION
# ===================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Data and Model Paths
DATA_PATH=data/generic_dataset.csv
MODEL_PATH=ml_models

# Feature Flags
ENABLE_AI_PROCESSING=true
ENABLE_CACHING=true
ENABLE_USER_PROFILING=true
ENABLE_CONTENT_ANALYSIS=true

# Performance Settings
CACHE_TTL_SECONDS=3600
BATCH_SIZE=10
MAX_CONCURRENT_REQUESTS=100

# ===================================
# DATABASE CONFIGURATION
# ===================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=recommendations
DB_USER=postgres
DB_PASSWORD=
DB_SSL_MODE=prefer
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_SOCKET_TIMEOUT=5.0
REDIS_CONNECTION_POOL_SIZE=10

# ===================================
# SECURITY CONFIGURATION
# ===================================
SECURITY_REQUIRE_API_KEY=false
SECURITY_API_KEYS=your-secret-api-key-1,your-secret-api-key-2
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_MAX_REQUESTS_PER_MINUTE=60
SECURITY_MAX_REQUESTS_PER_HOUR=1000
SECURITY_ENABLE_IP_FILTERING=false
SECURITY_ALLOWED_IPS=
SECURITY_BLOCKED_IPS=
SECURITY_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
SECURITY_TRUSTED_HOSTS=localhost,127.0.0.1

# ===================================
# AI PROVIDER CONFIGURATION
# ===================================
# OpenAI Configuration
AI_OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Configuration
AI_ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Ollama Configuration (for local AI)
AI_OLLAMA_BASE_URL=http://localhost:11434

# AI Settings
AI_DEFAULT_PROVIDER=openai
AI_DEFAULT_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_TIMEOUT=30.0
AI_MAX_RETRIES=3
AI_BACKOFF_FACTOR=2.0

# ===================================
# MONITORING AND OBSERVABILITY
# ===================================
MONITORING_ENABLE_METRICS=true
MONITORING_ENABLE_TRACING=false
MONITORING_ENABLE_HEALTH_CHECKS=true
MONITORING_METRICS_PORT=9090
MONITORING_HEALTH_CHECK_INTERVAL=30
MONITORING_TRACE_SAMPLE_RATE=0.1

# ===================================
# DOCKER AND DEPLOYMENT
# ===================================
# Docker-specific settings
SKIP_VALIDATION=false
LOG_DIR=logs

# Health check settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# ===================================
# DEVELOPMENT SETTINGS
# ===================================
# Only used in development environment
DEV_RELOAD=true
DEV_DEBUG_MODE=true

# ===================================
# PRODUCTION SETTINGS
# ===================================
# Production-specific overrides (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=INFO
# SECURITY_REQUIRE_API_KEY=true
# MONITORING_ENABLE_METRICS=true
# MONITORING_ENABLE_TRACING=true

# ===================================
# EXTERNAL SERVICE URLS
# ===================================
# External service endpoints (if needed)
# EXTERNAL_API_BASE_URL=https://api.external-service.com
# EXTERNAL_API_KEY=your-external-api-key

# ===================================
# BACKUP AND STORAGE
# ===================================
# Cloud storage settings (if needed)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-west-2
# S3_BUCKET_NAME=ai-recommendations-bucket

# ===================================
# DEPLOYMENT SPECIFIC
# ===================================
# Container orchestration settings
CONTAINER_NAME=ai-recommendation-service
IMAGE_TAG=latest
RESTART_POLICY=unless-stopped

# Load balancer settings
LOAD_BALANCER_ENABLED=false
UPSTREAM_SERVERS=127.0.0.1:8000

# SSL/TLS settings (for production)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=